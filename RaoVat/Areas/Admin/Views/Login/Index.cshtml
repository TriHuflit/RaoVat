@model RaoVat.Areas.Admin.Models.LoginModel
 @{ 
     Layout = null;
 }
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="./asset/img/logo.png" />
    <title>Đăng Nhập</title>
    <link rel="shortcut icon" href="~/Asset/img/logo.png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css">
    <link rel="preconnect" href="https://fonts.gstatic.com"> <!-- Font Roboto -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet"> <!-- Font Roboto -->
    <link rel="stylesheet" href="~/Asset/font/fontawesome-free-5.15.2-web/css/all.min.css">  <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Asset/font/themify/themify-icons.css"> <!-- Themify icon -->
    <link rel="stylesheet" href="~/Asset/css/base.css">  <!-- Css Chung -->
    <link rel="stylesheet" href="~/Asset/admin/css/main.css">  <!-- Css Chính -->
    <style>
        .message-error{
            background-color:transparent;
        }
    </style>
</head>
<body>
    <content class="content__login">
        <div class="auth-form">
            <div class="auth-form__container">
                @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, null, new { @style = "font-size:15px;border:none;opacity: 1;", @class = "message-error" })


                    <div class="auth-form__header">
                        <h1 class="auth-form__header-text">Đăng Nhập</h1>
                    </div>
                    <div class="auth-form__form">
                        @Html.TextBoxFor(model => model.UserName, new { @class = "auth-form__form-input", @placeholder = "Nhập tài khoản của bạn" })
                        @Html.TextBoxFor(model => model.PassWord, new { @class = "auth-form__form-input", @placeholder = "Mật Khẩu của bạn", @type = "password" })

                    </div>
                    <div class="auth-form__controls">
                        <button class="auth-form__controls-btn btn btn-primary" type="submit">Đăng Nhập</button>
                    </div>
                }
                <form action="#">
                </form>
            </div>
        </div>
    </content>
</body>
</html>
